{
    "jest": {
        "scriptPreprocessor": "../node_modules/babel-jest",
        "unmockedModulePathPatterns": ["node_modules/react"],
        "testPathIgnorePatterns": ["node_modules"],
        "moduleFileExtensions": ["js", "json", "react"],
        "collectCoverage": true
    },

    "less": {
        "options": {
            "compress": false,
            "yuicompress": false,
            "optimization": 10
        }
    },

    "connect": {
        "port": 8080,
        "livereload": true
    },

    "browserify": {
        "debug": true,
        "shim": {
            "bootstrap": {
                "path" : "node_modules/bootstrap/dist/js/bootstrap.js",
                "exports" : "bootstrap",
                "depends" : {
                    "jquery" : "jQuery"
                }
            }
        }
    },

    "common": {
        "js": [
            "react",
            "react/addons",
            "react-router",
            "keymirror",
            "flux",
            "events",
            "jquery",
            "q"
        ],

        "copy": [
            { "src": "node_modules/bootstrap/dist/fonts/*", "dest": "/fonts" },
            { "src": "node_modules/font-awesome/fonts/*", "dest": "/fonts" }
        ]
    },

    "apps": {
        "reactator" : {
            "src": "reactator",
            "common": false,
            "fallback": null,
            "copy": [],
            "js": [
                { "src": "reactator/reactator.js", "name": "reactator.js", "dest": "/" }
            ],
            "less": []
        },

        "demo": {
            "src": "demo",
            "common": true,
            "fallback": "dist/demo/index.html",
            "copy": [
                { "src": "demo/index.html", "dest": "/" }
            ],

            "js": [
                { "src": "demo/app.js", "name": "app.js", "dest": "/js" }
            ],

            "less": [
                { "src": "demo/assets/css/style.less", "dest": "/css" }
            ]
        }
    }
}